# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-random-key
FLASK_ENV=development
DEBUG=True

# Database Configuration
# Option 1: SQLite for local development (default)
DATABASE_URL=sqlite:///instance/app.db
SQLITE_DATABASE_URL=sqlite:///instance/app.db

# Option 2: Supabase PostgreSQL (recommended for development and production)
# Get this from your Supabase project settings -> Database -> Connection string
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Production (Supabase PostgreSQL - set in Azure Portal)
# DATABASE_URL=postgresql://postgres:password@db.project.supabase.co:5432/postgres

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Azure Storage (for production file uploads)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Security Settings
WTF_CSRF_ENABLED=True

# Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Quiz Settings (defaults)
DEFAULT_QUIZ_DURATION=30
DEFAULT_QUESTION_TIME=20
MAX_PARTICIPANTS=500

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=False
# Alternative Email Configurations:
# For Outlook/Hotmail:
# MAIL_SERVER=smtp-mail.outlook.com
# MAIL_PORT=587

# For Yahoo Mail:
# MAIL_SERVER=smtp.mail.yahoo.com
# MAIL_PORT=587

# For Custom SMTP:
# MAIL_SERVER=your-smtp-server.com
# MAIL_PORT=587